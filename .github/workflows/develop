name: Build Quill Table Better development

on:
  push:
    branches: 
      - "main"
      - "operate-scale"
      - "feature/**"
    paths:
      - 'src/**'
        
jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 'lts/*'

      - name: Install dependencies
        run: npm install

      - name: Compile with Webpack
        run: npm run build

      - name: Commit and Push dist
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add dist/ -f          
          git commit -m "chore: auto-build dist [skip ci]" || echo "No changes to commit"
          git push
